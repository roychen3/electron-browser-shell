{
  "name": "specialized-browser",
  "version": "1.0.0",
  "main": "dist/src/main/index.js",
  "workspaces": [
    "src/ui/browser-shell",
    "src/ui/browser-avatar-menu",
    "src/ui/authenticator"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev:browser-shell": "npm run dev --workspace=src/ui/browser-shell",
    "build:browser-shell": "npm run build --workspace=src/ui/browser-shell",
    "dev:browser-avatar-menu": "npm run dev --workspace=src/ui/browser-avatar-menu",
    "build:browser-avatar-menu": "npm run build --workspace=src/ui/browser-avatar-menu",
    "dev:authenticator": "npm run dev --workspace=src/ui/authenticator",
    "build:authenticator": "npm run build --workspace=src/ui/authenticator",
    "watch:electron": "tsc -w",
    "build:electron": "tsc",
    "dev:electron": "npm run build:electron && electron-forge start",
    "dev:electron:watch": "npm run watch:electron & nodemon --exec electron-forge start",
    "dev:ui": "npm run dev:browser-shell & npm run dev:browser-avatar-menu & npm run dev:authenticator",
    "dev": "npm run dev:browser-shell & npm run dev:browser-avatar-menu & npm run dev:authenticator & npm run dev:electron",
    "build": "npm run build:browser-shell && npm run build:browser-avatar-menu && npm run build:authenticator && npm run build:electron",
    "package": "npm run build && electron-forge package",
    "make": "npm run build && electron-forge make"
  },
  "author": "Roy Chen",
  "license": "MIT",
  "description": "",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.7.0",
    "@electron-forge/maker-deb": "^7.7.0",
    "@electron-forge/maker-rpm": "^7.7.0",
    "@electron-forge/maker-squirrel": "^7.7.0",
    "@electron-forge/maker-zip": "^7.7.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.7.0",
    "@electron-forge/plugin-fuses": "^7.7.0",
    "@electron/fuses": "^1.8.0",
    "concurrently": "^9.1.2",
    "electron": "^34.2.0",
    "nodemon": "^3.1.9",
    "typescript": "^5.7.3"
  }
}
